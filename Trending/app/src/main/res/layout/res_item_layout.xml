<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_two"/>


        
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="155dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
               />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="26sp"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="25sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="35dp"
                >


            <ImageView
                    android:id="@+id/cir"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_two"
                   android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"


                    />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cir"
                    android:text="C"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/star"


                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/language"/>

                <TextView
                    android:id="@+id/num_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14236"


                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/star"
                    />
                <ImageView
                    android:id="@+id/fork"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fork"
                    android:layout_marginLeft="10dp"

                    android:layout_toRightOf="@+id/num_one"/>
                <TextView
                    android:id="@+id/num_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4375556"

                    android:layout_marginLeft="5dp"

                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/fork"

                    />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>