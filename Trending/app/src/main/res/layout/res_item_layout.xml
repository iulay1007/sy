<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatur"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/circle_two"
            fresco:failureImage="@drawable/circle_one"
            />




        
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
               />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:paddingRight="25dp"
                android:singleLine="false"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                >


            <ImageView
                    android:id="@+id/cir"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_three"
                   android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"


                    />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cir"
                    android:text="language"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/star"


                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/language"/>

                <TextView
                    android:id="@+id/num_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="number"


                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/star"
                    />
                <ImageView
                    android:id="@+id/fork"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/fork"
                    android:layout_marginLeft="10dp"

                    android:layout_toRightOf="@+id/num_one"/>
                <TextView
                    android:id="@+id/num_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="number"

                    android:layout_marginLeft="5dp"

                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/fork"

                    />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>